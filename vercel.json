{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "env": {
        "VITE_API_BASE_URL": "https://airtableform-lemon.vercel.app"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/auth/(.*)",
      "destination": "/api/server.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/index.html"
    }
  ]
}